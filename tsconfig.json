{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": ["ES2020"],
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"types": ["node", "vscode"]
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
